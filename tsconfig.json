{
  "compilerOptions": {
    "target": "es2024",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": { "@/*": ["src/*"] },
    "typeRoots": ["node_modules/@types", "./types/**/*.d.ts"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["generated", "node_modules", "build"]
}
